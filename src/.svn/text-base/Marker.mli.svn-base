(** 
	Markers are used during testing to programmatically detect that a code block
	has been run when that code may not have any detectable side effects 
	
	@author pgroves
	@date 04/09/07
	
*)

type t

(* make an empty marker *)
val create: unit -> t

(** add a mark to the marker *)
val mark: t -> unit

(** sets the number of marks back to 0 *)
val reset: t -> unit

(** returns the number of times mark has been called since the last reset () *)
val getNumMarks: t -> int

(** tells if the marker has been marked at all *)
val hasMarks: t -> bool

(** tells if the marker has been marked once and only once *)
val hasExactlyOne: t -> bool
